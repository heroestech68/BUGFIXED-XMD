body {
    background: #111;
    color: #00eaff;
    font-family: Arial;
    text-align: center;
    padding-top: 40px;
}
input {
    padding: 10px;
    width: 280px;
    font-size: 18px;
    border-radius: 8px;
}
button {
    padding: 12px 20px;
    font-size: 18px;
    background: #00eaff;
    border: none;
    border-radius: 8px;
}
pre {
    margin-top: 20px;
    color: #0f0;
    text-align: left;
    width: 80%;
    margin-left: 10%;
}
