<!DOCTYPE html>
<html>
<head>
  <title>Pair Your WhatsApp</title>
  <style>
    body { font-family: Arial; padding: 30px; }
    #box { width: 300px; padding: 20px; border: 1px solid #aaa; }
  </style>
</head>
<body>
  <h2>BUGFIXED-XMD Pairing</h2>

  <div id="box">
    <form id="pairForm">
      <label>Enter WhatsApp Number:</label><br><br>
      <input type="text" id="number" placeholder="2547xxxxxxxx"><br><br>
      <button type="submit">Get Pairing Code</button>
    </form>

    <pre id="result"></pre>
  </div>

  <script>
    document.getElementById("pairForm").onsubmit = async (e) => {
      e.preventDefault();
      const number = document.getElementById("number").value;

      let res = await fetch("/pair", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ number })
      });

      let data = await res.json();
      document.getElementById("result").textContent =
        "Pairing Code: " + data.pairing_code;
    };
  </script>
</body>
</html>
